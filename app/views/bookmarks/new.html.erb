<h1>Add a movie to <%= @list.name %></h1>
<%= form_with model: [@list, @bookmark], local: true do |form| %>
    <div class="form-group">
        <%= form.label :movie_id %>
        <%= form.collection_select :movie_id, Movie.all, :id, :title, prompt: true, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.label :comment %>
        <%= form.text_area :comment, class: 'form-control' %>
    </div>
    <%= form.submit 'Add', class: 'btn btn-primary' %>
<% end %>
