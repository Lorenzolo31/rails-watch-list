
<div class="container p-4 mb-4 bg-light rounded shadow">
   <h1 class="display-4 text-primary text-center shadow-sm hover-effect ">List</h1>
  <%= simple_form_for(@list) do |f| %>
    <%= f.input :name, input_html: { class: "form-control form-control-lg" } %>
    <%= f.submit class: "btn btn-primary btn-lg" %>
  <% end %>
  <%= link_to "Back to list", lists_path, class: "btn btn-primary btn-lg mt-4" %>
</div>
